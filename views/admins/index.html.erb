<% provide(:title, "Admins") %>

<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Admin',  new_admin_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button" %>
<% end %>

<p id="notice"><%= notice %></p>

<div class="w3-container">
  <div class="w3-panel w3-quarter w3-red w3-xlarge w3-center">App Administrator</div>
  <% @admins.each do |admin| %>
  
  <div class="admins w3-container">
      <div class="w3-sand w3-padding-32 w3-half" style="height:500px">
        
      </div>
  
    <div class="w3-sand w3-padding-64 w3-half" style="height:500px">
      <h1><%= admin.fname %></h1>
      <div class="w3-margin-left"></div>
      <p><%= admin.lname %></p>
      <p><%= admin.phonenumber %></p>
      <p><%= admin.date_of_birth %></p>
      <p><%= admin.user %></p>
      <p>
        
        <%# if user_signed_in? %>
        <%= link_to 'Show', admin, :class => "button", :role => "button" %>
        <%= link_to 'Edit', edit_admin_path(admin), :class => "button", :role => "button" %>
        <%= link_to 'Delete', admin, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
        <%# end %>
      </p>
    </div>
  </div>
  <% end %>
</div>
<br>