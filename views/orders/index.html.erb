<% provide(:title, "Orders") %>

<%# if admin_signed_in? %>
<%#= link_to 'New Order',  new_order_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button" %>
<%# end %>

<p id="notice"><%= notice %></p>

<div class="w3-container">
  <div class="w3-container w3-third"></div>
  <div class="w3-panel w3-third w3-red w3-xlarge w3-center w3-xxxlarge">Orders</div>
  <div class="w3-container w3-third"></div>
</div>

<div class="w3-row">
  <div class="w3-col w3-left w3-container" style="width:300px"></div>
   <div class="w3-col w3-right w3-container" style="width:300px"></div>
    <div class="w3-rest w3-container">
      <table class="w3-table-all w3-card-4">
        <% @orders.each do |order| %>
        <tr>
          <th class="w3-border w3-center w3-pale-green">Order date</th>
          <th class="w3-border w3-center w3-pale-green">Ordered By</th>
          <th class="w3-border w3-center w3-pale-green">Status</th>
          <th class="w3-border-top w3-border-left w3-border-bottom w3-pale-green"></th>
          <th class="w3-border-top w3-border-bottom w3-pale-green"></th>
          <th class="w3-border-top w3-border-right w3-border-bottom w3-pale-green"></th>
        </tr>

        <tr>
          <td class="w3-border"><%= order.order_date %></td>
          <!--<td class="w3-border"><%#= order.user.fname %></td>-->
          <td class="w3-border"><%= order.user.email %></td>
          <td class="w3-border"><%= order.status %></td>
          <%# if user_signed_in? %>
          <td class="w3-border w3-center"><%= link_to 'Show', order, :class => "w3-button w3-blue w3-round-xxlarge w3-hover-red" %></td>
          <% if user_signed_in? && current_user.admin? %>
          <td class="w3-border w3-center"><%= link_to 'Edit', edit_order_path(order), :class => "w3-button w3-blue w3-round-xxlarge w3-hover-red" %></td>
          <% end %>
          <td class="w3-border w3-center"><%= link_to 'Back', "/collections", :class => "w3-button w3-blue w3-round-xxlarge w3-hover-red" %></td>
          <%# end %>
        </tr>
        <% end %>
      </table>
    </div>
</div>
 
<br>